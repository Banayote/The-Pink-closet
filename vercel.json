{
  "version": 2,
  "builds": [
    {
      "src": "backend/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/$1" 
    },
    {
      "src": "/login",
      "dest": "/public/login.html"
    },
    {
      "src": "/store",
      "dest": "/public/store.html"
    },
    {
      "src": "/profile",
      "dest": "/public/profile.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
