{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "api/products.js",   // Add this line to handle the API
      "use": "@vercel/node"       // Use Vercel's Node.js builder for serverless functions
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/login",
      "dest": "/public/login.html"
    },
    {
      "src": "/store",
      "dest": "/public/store.html"
    },
    {
      "src": "/profile",
      "dest": "/public/profile.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/api/products",      // API route for fetching products
      "dest": "/api/products.js"   // Maps to the products.js file
    }
  ]
}
